@model Setting
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>


<div class="container-fluid">
    <div class="card">
        <div class="card-body ">
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.About"></label>
                        <input asp-for="@Model.About" class="form-control" placeholder="About">
                        <span asp-validation-for="@Model.About" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.PhoneNumNav"></label>
                        <input asp-for="@Model.PhoneNumNav" class="form-control" placeholder="PhoneNumNav">
                        <span asp-validation-for="@Model.PhoneNumNav" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.Address"></label>
                        <input asp-for="@Model.Address" class="form-control" placeholder="Address">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.WorkStart"></label>
                        <input asp-for="@Model.WorkStart" class="form-control" placeholder="WorkStart">
                        <span asp-validation-for="@Model.WorkStart" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.WorkClose"></label>
                        <input asp-for="@Model.WorkClose" class="form-control" placeholder="WorkClose">
                        <span asp-validation-for="@Model.WorkClose" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="@Model.EmailNav"></label>
                        <input asp-for="@Model.EmailNav" class="form-control" placeholder="EmailNav">
                        <span asp-validation-for="@Model.EmailNav" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="@Model.EmailContact"></label>
                        <input asp-for="@Model.EmailContact" class="form-control" placeholder="EmailContact">
                        <span asp-validation-for="@Model.EmailContact" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.ContactNumPhone"></label>
                        <input asp-for="@Model.ContactNumPhone" class="form-control" placeholder="ContactNumPhone">
                        <span asp-validation-for="@Model.ContactNumPhone" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-12">
                        <label asp-for="@Model.ImageFileNav"></label>
                        <input asp-for="@Model.ImageFileNav" class="form-control" placeholder="FilesNav">
                        <span asp-validation-for="@Model.ImageFileNav" class="text-danger"></span>
                    </div>
                 
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>



@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}