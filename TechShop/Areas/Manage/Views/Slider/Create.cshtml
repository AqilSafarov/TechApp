@model Slider 
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<div class="container-fluid">
    <div class="card">
        <div class="card-body ">
            <form method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Title"></label>
                        <input asp-for="@Model.Title" class="form-control" placeholder="Title">
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="@Model.Text"></label>
                        <input asp-for="@Model.Text" class="form-control" placeholder="Text">
                        <span asp-validation-for="@Model.Text" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.Price"></label>
                        <input asp-for="@Model.Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="@Model.RedirectUrl"></label>
                        <input asp-for="@Model.RedirectUrl" class="form-control" placeholder="RedirectUrl">
                        <span asp-validation-for="@Model.RedirectUrl" class="text-danger"></span>
                    </div>


                    <div class="form-group col-md-12">
                        <label asp-for="@Model.ImageFile"></label>
                        <input asp-for="@Model.ImageFile" class="form-control" placeholder="Files">
                        <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>



@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script></script>
}